<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Puppy - BAT" verbose="1" configfailurepolicy="continue">
    <listeners>
        <listener class-name="com.framework.qa.uicore.listeners.TestNGListener"/>
    </listeners>
    <test name="Home">
        <groups>
            <define name="all">
                <include name="BAT"/>
            </define>
            <run>
                <include name="all"/>
            </run>
        </groups>
        <classes>
            <class name="com.framework.qa.test.traditional.DemoLoginTest"/>
            <class name="com.framework.qa.test.traditional.DemoHomeTest"/>
        </classes>
    </test>
</suite>